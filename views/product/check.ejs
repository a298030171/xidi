<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>node 管理后台</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="robots" content="all,follow">
    <!-- Bootstrap CSS-->
    <link rel="stylesheet" href="/admin/vendor/bootstrap/css/bootstrap.min.css">
    <!-- Font Awesome CSS-->
    <link rel="stylesheet" href="/admin/vendor/font-awesome/css/font-awesome.min.css">
    <!-- Fontastic Custom icon font-->
    <link rel="stylesheet" href="/admin/css/fontastic.css">
    <!-- Google fonts - Poppins -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Poppins:300,400,700">
    <!-- theme stylesheet-->
    <link rel="stylesheet" href="/admin/css/style.default.css" id="theme-stylesheet">
    <!-- Custom stylesheet - for your changes-->
    <link rel="stylesheet" href="/admin/css/custom.css">
    <!-- Favicon-->
    <link rel="shortcut icon" href="/admin/img/favicon.ico">
    <!-- Tweaks for older IEs--><!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script><![endif]-->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css">
    <script src="/admin/vendor/jquery/jquery.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.11/summernote-lite.css" rel="stylesheet">
    <script src="/admin/js/summernote-lite.js"></script>
    <script src="/admin/js/summernote-zh-CN.js"></script>
    <link href="/admin/fileinput/css/bootstrap-fileinput.css" rel="stylesheet">
    <script src="/admin/fileinput/js/bootstrap-fileinput.js"></script>
  </head>
  <body>
    <div class="page">
      <!-- Main Navbar-->
      <% include ../common/header.ejs %>
      <div class="page-content d-flex align-items-stretch"> 
        <!-- Side Navbar -->
        <% include ../common/sidebar.ejs %>
        <div class="content-inner">
          <!-- Page Header-->
          <% include ../common/crumb.ejs %>
          <section class="tables">   
            <div class="container-fluid">
              <div class="row">
                  <div class="col-lg-12">
                    <div class="card">
                      <div class="card-header d-flex align-items-center">
                        <h3 class="h4">修改</h3>
                      </div>
                      <div class="card-body">
                        <!-- <p>Lorem ipsum dolor sit amet consectetur.</p> -->
                        <!-- <form class="form-horizontal"> -->
                          <div class="form-group row">
                            <label class="col-sm-3 form-control-label">标题</label>
                            <div class="col-sm-9">
                              <input id="name" type="email" placeholder="字数限定提示" class="form-control form-control-success" value="<%= page_data.name%>"><small class="form-text" vla>文章的标题会显示到页面的列表.</small>
                            </div>
                          </div>
                          <div class="form-group row">
                            <label class="col-sm-3 form-control-label">价格</label>
                            <div class="col-sm-9">
                              <input id="price" type="email" placeholder="字数限定提示" class="form-control form-control-success" value="<%= page_data.price%>"><small class="form-text">文章简短的介绍.</small>
                            </div>
                          </div>
                          <div class="form-group row">
                            <label class="col-sm-3 form-control-label">货号</label>
                            <div class="col-sm-9">
                              <input id="id" type="text" placeholder="字数限定提示" class="form-control form-control-success" value="<%= page_data.id%>"><small class="form-text">文章简短的介绍.</small>
                            </div>
                          </div>
                          <div class="form-group row">
                            <label class="col-sm-3 form-control-label">描述</label>
                            <div class="col-sm-9">
                              <div id="summernote"></div>
                            </div>
                          </div>
                          <div class="form-group row">
                            <label class="col-sm-3 form-control-label">国家</label>
                            <div class="col-sm-9">
                              <input id="country" type="text" placeholder="字数限定提示" class="form-control form-control-success" value="<%= page_data.country%>">
                            </div>
                          </div>
                          <div class="form-group row">
                            <label class="col-sm-3 form-control-label">flag</label>
                            <div class="col-sm-9">
                              <input id="flag" type="text" placeholder="字数限定提示" class="form-control form-control-success" value="<%= page_data.flag%>">
                            </div>
                          </div>
                          <div class="form-group row">
                            <label class="col-sm-3 form-control-label">图片</label>
                            <div class="col-sm-9">
                              <form enctype='multipart/form-data'>
                                  <label class="col-sm-3 form-control-label">banner</label>
                                  <div class="form-group">
                                      <div class="fileinput fileinput-new" data-provides="fileinput"  id="exampleInputUpload">
                                          <div class="fileinput-new thumbnail" style="width: 100px;height: auto;max-height:100px;">
                                              <img id='picImg' style="width: 100%;height: auto;max-height: 100px;" src="<%= page_data.src?page_data.src:'/admin/fileinput/images/noimage.png' %>" alt="" />
                                          </div>
                                          <div class="fileinput-preview fileinput-exists thumbnail" style="max-width: 100px; max-height: 100px;"></div>
                                          <div>
                                              <span class="btn btn-dark small btn-file">
                                                  <span class="fileinput-new">+</span>
                                                  <span class="fileinput-exists">+</span>
                                                  <input type="file" name="banner" id="banner" accept="image/gif,image/jpeg,image/x-png"/>
                                              </span>
                                              <a href="javascript:;" class="btn btn-dark fileinput-exists" data-dismiss="fileinput">-</a>
                                          </div>
                                      </div>
                                  </div>
                                  <label class="col-sm-3 form-control-label">moreimg1</label>
                                  <div class="form-group">
                                    <div class="fileinput fileinput-new" data-provides="fileinput"  id="exampleInputUpload">
                                        <div class="fileinput-new thumbnail" style="width: 100px;height: auto;max-height:100px;">
                                            <img id='picImg' style="width: 100%;height: auto;max-height: 100px;" src="<%= page_data.moreimg1?page_data.moreimg1:'/admin/fileinput/images/noimage.png' %>" alt="" />
                                        </div>
                                        <div class="fileinput-preview fileinput-exists thumbnail" style="max-width: 100px; max-height: 100px;"></div>
                                        <div>
                                            <span class="btn btn-dark small btn-file">
                                                <span class="fileinput-new">+</span>
                                                <span class="fileinput-exists">+</span>
                                                <input type="file" name="moreimg1" id="moreimg1" accept="image/gif,image/jpeg,image/x-png"/>
                                            </span>
                                            <a href="javascript:;" class="btn btn-dark fileinput-exists" data-dismiss="fileinput">-</a>
                                        </div>
                                    </div>
                                  </div>
                                  <label class="col-sm-3 form-control-label">moreimg2</label>
                                  <div class="form-group">
                                  <div class="fileinput fileinput-new" data-provides="fileinput"  id="exampleInputUpload">
                                      <div class="fileinput-new thumbnail" style="width: 100px;height: auto;max-height:100px;">
                                          <img id='picImg' style="width: 100%;height: auto;max-height: 100px;" src="<%= page_data.moreimg2?page_data.moreimg2:'/admin/fileinput/images/noimage.png' %>" alt="" />
                                      </div>
                                      <div class="fileinput-preview fileinput-exists thumbnail" style="max-width: 100px; max-height: 100px;"></div>
                                      <div>
                                          <span class="btn btn-dark small btn-file">
                                              <span class="fileinput-new">+</span>
                                              <span class="fileinput-exists">+</span>
                                              <input type="file" name="moreimg2" id="moreimg2" accept="image/gif,image/jpeg,image/x-png"/>
                                          </span>
                                          <a href="javascript:;" class="btn btn-dark fileinput-exists" data-dismiss="fileinput">-</a>
                                      </div>
                                  </div>
                                  </div>
                                  <label class="col-sm-3 form-control-label">imgarr</label>
                                  <div class="form-group">
                                  <div class="fileinput fileinput-new" data-provides="fileinput"  id="exampleInputUpload">
                                      <div class="fileinput-new thumbnail" style="width: 100px;height: auto;max-height:100px;">
                                          <img id='picImg' style="width: 100%;height: auto;max-height: 100px;" src="<%= page_data.imgarr.img1?page_data.imgarr.img1:'/admin/fileinput/images/noimage.png' %>" alt="" />
                                      </div>
                                      <div class="fileinput-preview fileinput-exists thumbnail" style="max-width: 100px; max-height: 100px;"></div>
                                      <div>
                                          <span class="btn btn-dark small btn-file">
                                              <span class="fileinput-new">+</span>
                                              <span class="fileinput-exists">+</span>
                                              <input type="file" name="imgarr" id="imgarr" accept="image/gif,image/jpeg,image/x-png" multiple/>
                                          </span>
                                          <a href="javascript:;" class="btn btn-dark fileinput-exists" data-dismiss="fileinput">-</a>
                                      </div>
                                  </div>
                                  </div>

                              </form>
                            </div>
                          </div>
                   

                          <div class="form-group row">       
                            <div class="col-sm-10 offset-sm-3">
                              <input type="button" value="提交" class="btn btn-success" id="commit">
                              <script>
                                $(function(){
                                  $('#summernote').summernote({
                                    placeholder: 'https://summernote.org',
                                    tabsize: 2,
                                    minHeight: 100,
                                    lang: 'zh-CN'
                                  });
                                  $('#summernote').summernote('code','<%- page_data.desc %>')
                                  $('#commit').click(function(){
                                    var desc = $('#summernote').summernote('code')
                                    var name=$("#name").val();
                                    var price=$("#price").val();
                                    var country=$("#country").val();
                                    var flag=$("#flag").val();
                                    var id=$("#id").val();

                                    var form_data = new FormData();
                                    form_data.append('desc',desc);
                                    form_data.append('name',name);
                                    form_data.append('price',price); 
                                    form_data.append('country',country);
                                    form_data.append('flag',flag);
                                    form_data.append('id',id);
                                    form_data.append('dataName',"<%=dataName%>");
                                    form_data.append('_id','<%= page_data._id %>')
                                    form_data.append('start','<%= start %>')
                                    form_data.append('q','<%= q %>')
                                    form_data.append('rule','<%= rule %>')
                                    form_data.append('count','<%= count %>')
                                    form_data.append('banner',$('#banner')[0].files[0]);
                                    form_data.append('moreimg1',$('#moreimg1')[0].files[0]);
                                    form_data.append('moreimg2',$('#moreimg2')[0].files[0]);
                                    for(var i = 0 ; i < $("#imgarr")[0].files.length;i++){
                                      form_data.append('imgarr',$('#imgarr')[0].files[i]);
                                    }
                                    $.ajax({
                                      url: '/admin/product/check/submit',
                                      type: 'POST',
                                      data:form_data,
                                      // async: false,
                                      // cache: false,
                                      contentType: false,//不设置编码类型,在进行文件流与普通字符串混合上传的时候，需要设置为false
                                      processData: false,//不进行数据处理
                                      success: function (url) {
                                        window.location.href=url;//前端跳转
                                      },
                                      error: function (data) {
                                          console.log(data.status);
                                      }
                                    });
                                  })
                                })
                              </script>
                            </div>
                          </div>
                        <!-- </form> -->
                      </div>
                    </div>
                  </div>
              </div>
            </div>
          </section>
          <!-- Page Footer-->
          <% include ../common/footer.ejs %>
        </div>
      </div>
    </div>
    <!-- JavaScript files-->
    <script src="/admin/vendor/popper.js/umd/popper.min.js"> </script>
    <script src="/admin/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="/admin/vendor/jquery.cookie/jquery.cookie.js"> </script>
    <script src="/admin/vendor/chart.js/Chart.min.js"></script>
    <script src="/admin/vendor/jquery-validation/jquery.validate.min.js"></script>
    <!-- Main File-->
    <script src="/admin/js/front.js"></script>
  </body>
</html>